pipeline {
    agent any

    environment {
        AWS_SHARED_CREDENTIALS_FILE = '/home/ubuntu/.aws/credentials'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/venkat3534/Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                ansible-playbook Ansible-aws-s3.yml
                '''
            }
        }
    }
}
